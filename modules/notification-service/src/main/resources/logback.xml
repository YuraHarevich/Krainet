<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n"/>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="LOKI_PROD" class="com.github.loki4j.logback.Loki4jAppender">
        <http>
            <url>${LOKI_URL:-http://localhost:3100}/loki/api/v1/push</url>
            <connectionTimeout>10000</connectionTimeout>
            <requestTimeout>15000</requestTimeout>
        </http>
        <batch>
            <maxItems>500</maxItems>
            <maxBytes>1048576</maxBytes>
            <timeout>3</timeout>
        </batch>
        <format>
            <label>
                <pattern>app=notification-service,env=prod,host=${HOSTNAME},level=%level</pattern>
            </label>
            <message>
                <pattern>${LOG_PATTERN}</pattern>
            </message>
        </format>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>

        <logger name="ru.kharevich" level="INFO"/>
        <logger name="org.springframework" level="INFO"/>
        <logger name="org.hibernate.SQL" level="INFO"/>
    </springProfile>

    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="LOKI_PROD"/>
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <logger name="com.github.loki4j" level="WARN"/>
    <logger name="org.apache.kafka" level="WARN"/>
    <logger name="org.springframework.kafka" level="WARN"/>

</configuration>